#!/bin/sh

. `dirname "$0"`/functions
. version

mkdir -p $BASEDIR/../../../output/${SCHEDULER}
mkdir -p $BASEDIR/../../../output/${SCHEDULER}/${BUILD_NUMBER}
mv $BASEDIR/../../../output/.tmp/${SCHEDULER}/${BUILD_NUMBER}/* $BASEDIR/../../../output/${SCHEDULER}/${BUILD_NUMBER}
rmdir --ignore-fail-on-non-empty $BASEDIR/../../../output/.tmp/${SCHEDULER}/${BUILD_NUMBER}
rm -f $BASEDIR/../../../output/${SCHEDULER}/current
ln -fs ${BUILD_NUMBER} $BASEDIR/../../../output/${SCHEDULER}/current
